{
  "name": "@piyushrajyadav/formease",
  "version": "1.0.1",
  "description": "A lightweight, intelligent form handling library with validation, autosave, and accessibility features",
  "type": "module",
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "unpkg": "dist/formease.umd.js",
  "jsdelivr": "dist/formease.umd.js",
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "rollup -c",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\" \"tests/**/*.ts\"",
    "prepublishOnly": "npm run build && npm test"
  },
  "keywords": [
    "form",
    "validation",
    "autosave",
    "accessibility",
    "typescript",
    "form-handling",
    "input-validation",
    "a11y"
  ],
  "author": {
    "name": "Piyush  Yadav",
    "email": "piyushyadavrajyadav@gmail.com",
    "url": "https://github.com/piyushrajyadav"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/piyushrajyadav/formease.git"
  },
  "bugs": {
    "url": "https://github.com/piyushrajyadav/formease/issues"
  },
  "homepage": "https://github.com/piyushrajyadav/formease#readme",
  "devDependencies": {
    "@rollup/plugin-typescript": "^11.1.6",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.11.24",
    "@typescript-eslint/eslint-plugin": "^7.1.0",
    "@typescript-eslint/parser": "^7.1.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "prettier": "^3.2.5",
    "rollup": "^4.12.0",
    "rollup-plugin-dts": "^6.1.0",
    "@rollup/plugin-terser": "^0.4.4",
    "ts-jest": "^29.1.2",
    "tslib": "^2.6.2",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=14.0.0"
  }
}
